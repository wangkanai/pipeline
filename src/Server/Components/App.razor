<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="utf-8"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover"/>
		<base href="/"/>
		<link rel="stylesheet" href="@Assets["lib/tabler/dist/css/tabler.min.css"]"/>
		<link rel="stylesheet" href="@Assets["lib/icons-webfont/dist/tabler-icons.css"]"/>
		<link rel="stylesheet" href="@Assets["dist/pipeline.css"]"/>
		<link rel="stylesheet" href="@Assets["Wangkanai.Pipeline.styles.css"]"/>
		<ImportMap/>
		<link rel="icon" type="image/png" href="favicon.png"/>
		<HeadOutlet/>
	</head>

	<body data-bs-theme="@ThemeSelected">
		<Routes/>
		<script src="lib/tabler/dist/js/tabler.min.js"></script>
		<script src="_framework/blazor.web.js"></script>
	</body>

</html>

@code{

	private Theme theme = Theme.System;

	private string ThemeSelected => theme switch
	{
		Theme.Light => "light",
		Theme.Dark  => "dark",
		_           => "auto"
	};

	protected override async Task OnInitializedAsync()
	{
		theme = Theme.Dark;
	}

}
